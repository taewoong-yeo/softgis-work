$map-button-size: 14px;
$map-button-icon-size: 16px;
$map-legend-font-size: 12px;

@mixin mapUiComponent() {
	z-index: 1;
	position: absolute;
	margin: space(1.5);

	&-lb, &-lt { left: 0; }
	&-rb, &-rt { right: 0; }
	&-lb, &-rb { bottom: 0; }
	&-lt, &-rt { top: 0; }
}

@mixin mapUiPosition($position) {
	@if $position == lt {
		left: 0; top: 0;
	} @else if $position == lb {
		left: 0; bottom: 0;
	} @else if $position == rt {
		right: 0; top: 0;
	} @else if $position == rb {
		right: 0; bottom: 0;
	}
}

%mapUiContainer {
	border: 1px solid #EEE;
	background: #FFF;
	color: #555;
	box-shadow: 0px 3px 10px rgba(0,0,0,.2);
}

%mapUiButton {
	display: block;
	width: em($map-button-size);
	height: em($map-button-size);
	line-height: em($map-button-size);
	vertical-align: middle;
}

.map {
	$self: &;
	position: relative;
	background: linear-gradient(45deg, $color-primary, $color-secondary);
	height: calc(100vh - 130px);

	&-openlayers {
		width: 100%;
		height: 100%;
	}

	&-ui {
		@include mapUiComponent;

		display: flex;
		flex-direction: column;

		&-group {
			margin: 0 0 space(1);
			display: flex;
			flex-direction: column;
		}
		
		button {
			@extend %mapUiContainer;
			
			outline: none;
			padding: space(.7);
			transition: background $default-transition;

			& + button {
				border-top: 0;
			}

			&:active {
				background: #EEE;
			}

			&:first-child {
				border-top-left-radius: $default-border-radius;
				border-top-right-radius: $default-border-radius;
			}

			&:last-child {
				border-bottom-left-radius: $default-border-radius;
				border-bottom-right-radius: $default-border-radius;
			}

			@include bx-selector() {
				@extend %mapUiButton;

				&:before,
				&:after {
					font-size: em($map-button-icon-size - 1px);
				}
			}

			@include fa-selector() {
				@extend %mapUiButton;

				&:before,
				&:after {
					font-size: em($map-button-icon-size - 4px);
				}
			}
		}
		
		&.boundary {
			margin-right: 50px;
			
			button {
				padding: space(.3) space(.7);
				
				i {
					display: inline-block;
					margin: 0 space(.5) space(.5) 0;
				}
			}
		}
	}
	
	&-type {
		right: space(5) !important;
		font-size: rem(14px);

		button.active {
			background: #0475f4;
			color: #fff;
		}
	}

	&-grid,
	&-legend {
		#{$self}-ui-lb ~ &-lb,
		#{$self}-ui-lt ~ &-lt,
		#{$self}-ui-rb ~ &-rb,
		#{$self}-ui-rt ~ &-rt {
			margin: space(1.5) space(6);
		}
	}

	&-grid {
		@include mapUiComponent;

		max-width: 50%;

		&-inner {
			@extend %mapUiContainer;

			border-radius: $default-border-radius;
			font-size: em(12px) !important;
		}
	}

	&-legend {
		@include mapUiComponent;

		@extend %mapUiContainer;
		
		border-radius: $default-border-radius;
		padding: space(.5);

		h6 {
			font-size: em(12px);
			font-weight: 500;
			margin: 0 0 space(1);
			line-height: 1.4;
			text-align: center;
		}

		li {
			margin: space(.5) 0;
			font-size: em($map-legend-font-size);

			span {
				display: inline-block;
				border: 1px solid rgba(0,0,0,.3);
				border-radius: $default-border-radius;
				margin-right: space(1);
				width: 1em;
				height: 1em;
				background: $color-primary;
				vertical-align: middle;
			}
		}
	}
	
	&-popup {
		display: none;
		position: absolute;
		background-color: white;
		box-shadow: 0 1px 4px rgba(0,0,0,0.2);
		padding: 12px;
		border-radius: 10px;
		border: 1px solid #cccccc;
		bottom: 12px;
		left: -50px;
		width: 280px;
		z-index: 9999;
	
		&:after, &:before {
			top: 100%;
			border: solid transparent;
			content: " ";
			height: 0;
			width: 0;
			position: absolute;
			pointer-events: none;
		}
	
		&:after {
			border-top-color: white;
			border-width: 10px;
			left: 48px;
			margin-left: -10px;
		}
		
		&:before {
	        border-top-color: #cccccc;
	        border-width: 11px;
	        left: 48px;
	        margin-left: -11px;
		}
		
		&-content {
			
			h3 {
				padding: 0 0 10px 5px;
				font-size: 14px;
			    font-weight: 500;
				text-align: left;
				border-bottom: 1px solid #878787;
			}
			
			.warp {
				max-height: 300px;
				overflow-x: hidden;
			    overflow-y: scroll;
			    
				&::-webkit-scrollbar {
				    width:6px;
				    background: #d1d1d144;
				}
				
				&::-webkit-scrollbar-thumb {
					border-radius:3px;
				    background-color: #d1d1d1;
				}
				
				table {
					border-bottom: 1px solid #878787;
					font-size: 12px;
					
					th {
						width: 110px;
						height: auto;
						padding: 8px 10px;
						text-align: left;
					    background: #f7f7f7;
						border-bottom: 1px solid #d7d7d7;
					}
					
					td {
						height: auto;
						line-height: 18px;
						padding: 8px 10px;
						color: #666;
						border-bottom: 1px solid #d7d7d7;
					}
				}
			}
		}
		
		&-closer {
	        text-decoration: none;
	        position: absolute;
	        top: 2px;
	        right: 8px;
            padding: 0 4px 3px 3px;
			border-radius: 5px;
	        
	        &:after {
        		content: "âœ–";
      		}
      		
      		&:hover {
      			color: #fff;
      			background: $color-primary;
      		}
  		}
	}

	&-slider {
		$self-slider: &;

		@extend %mapUiContainer;

		position: absolute;
		visibility: hidden;
		border-radius: $default-border-radius;
		padding: space(.1) space(1);
		background: #ffffff;

		&-t { bottom: space(5); }
		&-r { left: space(5); }
		&-b { top: space(5); }
		&-l { right: space(5); }

		&-toggler {
			border-radius: $default-border-radius !important;

			&.active + #{$self-slider} {
				visibility: visible;
			}
		}

		&-increase,
		&-decrease {
			position: absolute;
			border-style: none !important;
			border-radius: 0 !important;
			height: 100%;
			box-shadow: none !important;
			z-index: 10;
		}

		&-increase {
			border-left-style: solid !important;
			right: 0;
		}

		&-decrease {
			border-right-style: solid !important;
			left: 0;
		}

		&-label {
			position: absolute;
			border-radius: $default-border-radius;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
			border-top: 0;
			margin: 1px 0 0;
			padding: space(.5);
			top: 100%;
			left: 0;
			width: 100%;
			background: rgba(#000000, .5);
			color: #ffffff;
			font-size: rem(14px);
			text-align: center;
		}

		.k-button-increase,
		.k-button-decrease {
			display: none;
		}

		.k-slider-horizontal {
			width: space(30);
		}

		.k-slider-track {
			margin-top: 0 !important;
		}

		.k-slider-selection {
			background: $color-primary !important;
		}

		.k-label {
			display: none;
		}
	}
}