
.guide-wrap {}
.guide-tab01 {font-size: 0; max-width: 1180px; margin: 40px auto 0;}
.guide-tab01 > li {display: inline-block;font-size: 16px; font-weight: 400; height: 36px; line-height: 36px; background: #b2c2e7; border-top-left-radius: 10px; border-top-right-radius: 10px; margin-right: 2px;}
.guide-tab01 > li a {color: #ffff; display: block; padding: 0 2em; letter-spacing: -.05em;}
.guide-tab01 > li.active, .guide-tab01 > li.active a:hover { background: #365dcb;  }
.guide-tab01 > li a:hover {background: #365dcb; border-top-left-radius: 10px; border-top-right-radius: 10px; }
.guide-tab01 > li.active a {color: #fff; }
.guide-content {background: #f2f6fa; padding: 2em; border-top: 2px solid #365dcb; }
.guide-content h4 {font-size: 1.35em; font-weight: 700; color: #384c58; padding-left: 15px; position: relative; margin-bottom: 1em; text-align: left;}
.guide-content h4::before {content:""; width: 10px; height: 10px; background: url(../../images/portal/bullet08.png) 0 0 no-repeat; background-size: cover; display: inline-block; position: absolute; left: 0; top: 10px; text-align: left;}

.guidelist01 {font-size: 0; margin-bottom: 50px;}
.guidelist01 li { display: inline-block; width: 25%; color: #384c58; text-align: center; padding: 1em; box-sizing: border-box; vertical-align: top;}
.guidelist01 li p {width: 100px; height: 100px; background: #fff; margin: 0 auto 10px; border-radius: 100px; border: 1px solid #bfd0d9;}
.guidelist01 li p img {display: block; margin: 20% auto 0; width: 70%; max-width: 60px;}
.guidelist01 li div {font-size: 15px; line-height: 20px; padding:  0 .5em; word-break: keep-all;}

.guidelist02 li {padding: 0 space(3); text-align: center; color: #384c58; font-size: 1em; line-height: 1.4; margin: 1.5em 0; word-break: keep-all;}
.guidelist02 li i{width:67px;height:64px;margin:auto;background:curl('/assets/images/noti/micon_plat.png'); display:block;}
.guidelist02 li span {color: #d15e36;}
.guidelist02 li:nth-of-type(1) i{background-position:2px 0;}
.guidelist02 li:nth-of-type(2) i{background-position:-78px 0;}
.guidelist02 li:nth-of-type(3) i{background-position:-152px 0;}
.guidelist02 li:nth-of-type(4) i{background-position:-231px 0;}

.guidelist02 li img {width: 100%; max-width: 500px; margin: 1em auto 2em; display: block;}
.guidelist03 {font-size: 0; margin-bottom: 50px;}
.guidelist03 li { display: inline-block; width: calc(25% - 20px); color: #384c58; text-align: center; padding: 1em 2em; box-sizing: border-box; vertical-align: top; font-size: 16px; background: #fff; border: 1px solid #cbd6e2; margin: 10px; min-height: 360px;}
.guidelist03 li > p {font-size: .765em; line-height: 1.6; display: block; text-align: left; margin-bottom: 5px; word-break: keep-all; padding-left: 10px; position: relative;}
.guidelist03 li > p::before {content:'- '; margin-right: 3px; position: absolute; left: 0; top: 0;}
.guidelist03 li > img {display: block; margin: .5em auto; width: 70%; max-width: 75px;}
.guidelist03 li > strong {font-size: 1em; margin-bottom: 1.25em; display: block;} 
.guidelist03 li > button {display: inline-block;  background: #7595a7; border: 0; color: #fff; font-size: .8em; margin: .25em auto; padding: .25em 1em; border-radius: 2px; min-width: 70px;}
.guide-img0201 {width: 95%; max-width: 830px; margin: 1em auto 3em; display: block;}
.guide-img0107 {width: 100%; max-width: 1065px; margin: 1em auto 2em;}
.btn-guide {text-align: right !important; padding: 0 50px;}
.btn-guide button {display: inline-block; background: #7595a7; border: 0; color: #fff; font-size: .8em; margin: .25em auto; padding: 0 1em; height: 28px; line-height: 26px; border-radius: 2px; min-width: 70px; }
