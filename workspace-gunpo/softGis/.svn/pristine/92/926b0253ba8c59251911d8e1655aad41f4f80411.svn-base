*, *:before, *:after {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	min-height: 0;
	min-width: 0;
}

html, body {
	width: 100%;
	height: 100%;
	font-family: $default-font-family;
	font-weight: $default-font-weight;
	font-size: $default-font-size;
	line-height: $default-line-height;
	letter-spacing: $default-letter-spacing;
	-webkit-font-smoothing: antialiased;
	-webkit-text-size-adjust: none;
	-moz-osx-font-smoothing: grayscale;
}
a {
	color: inherit;
	text-decoration: none;
}
ul, li {
	list-style: none;
}
select {
	padding: space(.2) space(3) space(.2) space(.5);
	background-color: transparent;
	background-image: curl('assets/images/common/select-arrow.png');
	background-repeat: no-repeat;
	background-position: center right space(1);
	appearance: none;

	&::-ms-expand {
		display: none;
	}
}
input, select, textarea, button {
	outline: none;
	font: inherit;
	resize: none;

	&[readonly], &[disabled], &.readonly {
		background-color: $color-background;
	}
}
button {
	cursor: pointer;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
	width: 100%;
}
h1, h2, h3, h4, h5, h6 {
	font-weight: bold;
	font-weight: 600;
	font-size: 1em;
}
strong {
	font-weight: $font-weight-medium;
}

#admin_admin-cmmnty .k-grid .k-grid-content,#admin_admin-cmmnty .k-grid .k-grid-content-locked,#admin_admin-cmmnty .k-grid .k-grid-header-locked,#admin_admin-cmmnty .k-grid td:nth-child(3) {
	max-width: 200px;
}